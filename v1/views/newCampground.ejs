<%- include("partials/header")%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Adding the new Campground.</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Campground name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Enter the image url">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-md btn-primary">Add me In !</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back.</a>
        </div>
    </div>
</div>

<%- include("partials/footer")%>